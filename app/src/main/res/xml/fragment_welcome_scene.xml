<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/viewFirst"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="24dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/viewSecond"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/middle">
        <Constraint
            android:id="@+id/viewActive"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="24dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/viewSecond"
            motion:layout_constraintStart_toStartOf="@id/viewSecond" />
        <Constraint
            android:id="@+id/viewFirst"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="24dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/viewSecond"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
    <Transition
        motion:constraintSetEnd="@+id/middle"
        motion:constraintSetStart="@+id/start">
        <OnSwipe motion:dragDirection="dragLeft" />
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewFirst" />
            <KeyAttribute
                android:scaleX="1.5"
                android:scaleY="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewActive" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewSecond" />
        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/viewActive"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="24dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/viewThird"
            motion:layout_constraintStart_toStartOf="@id/viewThird" />
        <Constraint
            android:id="@+id/viewFirst"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="24dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/viewSecond"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/middle">
        <OnSwipe motion:dragDirection="dragLeft" />
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewSecond" />
            <KeyAttribute
                android:scaleX="1.5"
                android:scaleY="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewActive" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewThird" />
        </KeyFrameSet>
    </Transition>
</MotionScene>