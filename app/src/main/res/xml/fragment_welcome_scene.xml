<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/viewActive"
            android:layout_width="24dp"
            android:layout_height="8dp"
            motion:layout_constraintBottom_toBottomOf="@id/viewFirst"
            motion:layout_constraintEnd_toEndOf="@id/viewFirst"
            motion:layout_constraintStart_toStartOf="@id/viewFirst" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/middle">
        <Constraint
            android:id="@+id/viewActive"
            android:layout_width="24dp"
            android:layout_height="8dp"
            motion:layout_constraintBottom_toBottomOf="@id/viewSecond"
            motion:layout_constraintEnd_toEndOf="@id/viewSecond"
            motion:layout_constraintStart_toStartOf="@id/viewSecond" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/viewActive"
            android:layout_width="24dp"
            android:layout_height="8dp"
            motion:layout_constraintBottom_toBottomOf="@id/viewThird"
            motion:layout_constraintEnd_toEndOf="@id/viewThird"
            motion:layout_constraintStart_toStartOf="@id/viewThird" />
    </ConstraintSet>
    <Transition
        motion:constraintSetEnd="@+id/middle"
        motion:constraintSetStart="@+id/start">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="1.2"
                android:scaleY="0.9"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewActive" />
            <KeyAttribute
                android:scaleY="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewFirst" />
            <KeyAttribute
                android:scaleY="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewSecond" />
        </KeyFrameSet>
    </Transition>
    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/middle">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="1.2"
                android:scaleY="0.9"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewActive" />
            <KeyAttribute
                android:scaleY="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewSecond" />
            <KeyAttribute
                android:scaleY="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/viewThird" />
        </KeyFrameSet>
    </Transition>
</MotionScene>